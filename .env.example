# Database
DATABASE_URL=postgresql://user:password@localhost/presswire_v2
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
SUPABASE_SERVICE_KEY=your-service-key

# Authentication
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable
STRIPE_WEBHOOK_SECRET=your-webhook-secret

# Email (Resend)
RESEND_API_KEY=your-resend-key
EMAIL_FROM=noreply@presswire.ie

# AI Enhancement (choose one)
OPENAI_API_KEY=your-openai-key
OPENROUTER_API_KEY=your-openrouter-key
ANTHROPIC_API_KEY=your-anthropic-key
PYDANTIC_AI_MODEL=gpt-4o-mini

# CRO API
CRO_API_BASE_URL=https://api.vision-net.ie/live
CRO_API_KEY=your-cro-key

# Storage
STORAGE_BACKEND=supabase
STORAGE_BUCKET=press-releases

# Application
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_URL=http://localhost:8000

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
